{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Rails Server",
            "type": "Ruby",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "program": "bin/rails",
            "env": {
                "RAILS_ENV": "development"
            },
            "args": [
                "server",
                "-b", "0.0.0.0",
                "-p", "3000"
            ],
            "showDebuggerOutput": true,
            "useBundler": true,
            "console": "integratedTerminal"
        }
    ]
}